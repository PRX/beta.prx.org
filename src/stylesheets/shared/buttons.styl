$button {
  display: inline-block;
  position: relative;
  color: #fff;
  text-align: center;
  cursor: pointer;
}

$button-with-icon {
  @extend $button;

  &::before {
    font-family: 'FontAwesome';
    position: absolute;
    left: 8px;
  }
}

$background-orange {
  background-color: $orange;

  &:hover:not(:disabled) {
    background-color: $dark-orange;
  }
}

$background-blue {
  background-color: $blue;

  &:hover:not(:disabled) {
    background-color: $dark-blue;
  }
}

button-blue(with-icon=false) {
  if (with-icon) {
    @extend $button-with-icon;
  } else {
    @extend $button;
  }

  @extend $background-blue;
}

button-orange(with-icon=false) {
  if(with-icon) {
    @extend $button-with-icon;
  } else {
    @extend $button;
  }

  @extend $background-orange;
}

$player-button {
  button-orange();
  width: 70px;
  height: 70px;
  background-position: center center;
  background-repeat: no-repeat;
  background-image: url('/assets/images/bt_pause.svg');
  background-size: 23px 25px;

  &.play {
    background-image: url('/assets/images/bt_play.svg');
    background-size: 16px 24px;
  }

  &.loading:not(.play) {
    background-image: none;
    loading-indicator();
  }

  &:disabled {
    background-image: none;
  }
}
